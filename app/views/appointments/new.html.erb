<%= form_for(@appointment, url: appointments_create_path) do |f| %>
	<fieldset>
		<legend>Appointment</legend>
		<%= f.label :customer_name %>
		<%= f.text_field :customer_name %>
		<%= f.label :customer_phone_number %>
		<%= f.telephone_field :customer_phone_number %>
		<%= f.label :date_and_time %>
		<%= f.datetime_select :date_and_time, default: Time.now %>
		<%= f.label :length %>
		<%= f.number_field :length %>
		<%= f.submit %>
	</fieldset>
<% end %>